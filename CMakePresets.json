{
  "version": 6,

  "configurePresets": [
    {
      "name": "base-vcpkg",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "C:/dev/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "CMAKE_CXX_STANDARD": "20"
      }
    },

    {
      "name": "vs2022",
      "displayName": "VS 2022 (MSVC + vcpkg)",
      "inherits": "base-vcpkg",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/vs2022",
      "architecture": "x64"
    },

    {
      "name": "ninja-msvc",
      "displayName": "Ninja Multi-Config (MSVC + vcpkg)",
      "inherits": "base-vcpkg",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build/ninja-msvc"
    }
  ],

  "buildPresets": [
    {
      "name": "vs2022-debug",
      "configurePreset": "vs2022",
      "configuration": "Debug"
    },
    {
      "name": "vs2022-release",
      "configurePreset": "vs2022",
      "configuration": "Release"
    },
    {
      "name": "ninja-debug",
      "configurePreset": "ninja-msvc",
      "configuration": "Debug"
    },
    {
      "name": "ninja-release",
      "configurePreset": "ninja-msvc",
      "configuration": "Release"
    }
  ]
}
